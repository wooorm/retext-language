{
  "name": "retext-language",
  "version": "0.0.1",
  "description": "Detect the language of text with Retext",
  "keywords": [
    "writing",
    "system",
    "language",
    "detect",
    "guess",
    "retext"
  ],
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "franc": "^0.1.0",
    "retext-visit": "^0.1.0"
  },
  "peerDependencies": {
    "retext": "^0.1.0"
  },
  "devDependencies": {
    "eslint": "^0.8.0",
    "istanbul": "^0.3.0",
    "jscs": "^1.5.9",
    "mocha": "^1.21.0",
    "retext": "^0.1.0",
    "retext-content": "^0.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wooorm/retext-language.git"
  },
  "scripts": {
    "test": "node_modules/.bin/_mocha --reporter spec --check-leaks -u exports spec/retext-language.spec.js",
    "test-travis": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha --report lcovonly -- --reporter spec --check-leaks -u exports spec/retext-language.spec.js",
    "lint": "npm run lint-api && npm run lint-test && npm run lint-style",
    "lint-api": "node_modules/.bin/eslint index.js --env node --env browser --rule 'quotes: [2, single]'",
    "lint-test": "node_modules/.bin/eslint spec/retext-language.spec.js --env node --env mocha --rule 'quotes: [2, single]'",
    "lint-style": "node_modules/.bin/jscs index.js spec/retext-language.spec.js --reporter=inline",
    "install-browser-test": "npm install browserify",
    "build-browser-test": "node_modules/.bin/browserify spec/retext-language.spec.js -o spec/browser.spec.js",
    "coverage": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- -- spec/retext-language.spec.js",
    "make": "npm run lint && npm run coverage"
  },
  "testling": {
    "files": "spec/retext-language.spec.js",
    "harness": "mocha",
    "browsers": [
      "iexplore/latest",
      "chrome/latest",
      "chrome/canary",
      "firefox/latest",
      "firefox/nightly",
      "opera/latest",
      "opera/next",
      "safari/latest",
      "iphone/latest",
      "android-browser/latest"
    ]
  }
}
