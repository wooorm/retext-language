{
  "name": "retext-language",
  "version": "0.3.4",
  "description": "Detect the language of text with Retext",
  "license": "MIT",
  "keywords": [
    "writing",
    "system",
    "language",
    "detect",
    "guess",
    "retext"
  ],
  "dependencies": {
    "franc": "^0.7.0",
    "retext-visit": "^0.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wooorm/retext-language.git"
  },
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "devDependencies": {
    "benchmark": "^1.0.0",
    "eslint": "^0.12.0",
    "istanbul": "^0.3.0",
    "jscs": "^1.0.0",
    "jscs-jsdoc": "^0.4.0",
    "mocha": "^2.0.0",
    "retext": "^0.5.0",
    "retext-content": "^0.2.5",
    "retext-inspect": "^0.4.0"
  },
  "scripts": {
    "test-api": "_mocha --check-leaks test.js",
    "test-coveralls": "istanbul cover _mocha --report lcovonly -- --check-leaks test.js",
    "test-coverage": "istanbul cover _mocha -- --check-leaks test.js",
    "test-travis": "npm run test-coveralls",
    "test": "npm run test-api",
    "lint-api": "eslint index.js",
    "lint-benchmark": "eslint benchmark.js",
    "lint-test": "eslint --env mocha test.js",
    "lint-style": "jscs --reporter inline index.js benchmark.js test.js",
    "lint": "npm run lint-api && npm run lint-benchmark && npm run lint-test && npm run lint-style",
    "make": "npm run lint && npm run test-coverage",
    "benchmark": "matcha benchmark.js"
  }
